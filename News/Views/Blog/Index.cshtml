
@{
    ViewBag.Title = "Index";
    var articles = ViewBag.BlogArticles as List<BlogArticle>;

}

<h2>博客</h2>
<br />
<form method="get" action="@Url.Action("index")">
    <div class="form-group">
        <div>
            <input type="text" name="q" value="@ViewBag.q" class="form-control" />
        </div>
        <div>
            <button class="form-control"><span class="glyphicon glyphicon-search"></span></button>
        </div>
    </div> 
</form>

<br />
<ol>
    @foreach (var item in articles)
    {
        <li>
            @Html.ActionLink("[  编辑  ]", "Edit", new { id = item.Id }) |
            @Html.ActionLink("[  删除  ]", "Delete", new { id = item.Id }) |
            <a href="@Url.Action("Show",new { id = item.Id })">@item.Subject</a>
        </li>
    }
</ol>

